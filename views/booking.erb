<head>
  <link href="<%= url('/style.css') %>" rel="stylesheet" type="text/css" />
  <title>MakersBnB</title>
</head>
<body>
<div class="main">
<h1>MakersBnB</h1>
<ul>
  <li class="left"><a href="/properties">view all</a> </li>
  <%# sign in / sign up IF not signed it %>
  <%# profile & sign out IF signed it %>
  <li class="right"><a href="/profile">profile</a></li>
  <li class="right"><a href="/profile">sign up</a></li>
  <li class="right"><a href="/#">sign in</a></li>
  <li class="right"><a href="/#">sign out</a></li>
</ul><br>

<h2>Booking for <%= @property.title %></h2>
<form action="/book" method="post"> 
<h4>Check In</h4>
<input type="date" id="Test_DatetimeLocal">
<h4>Check Out</h4>
<input type="date" id="Test_DatetimeLocal">
<h4>Number of Guests</h4>
<select id="guests" name="guests">
  <option value="1">1</option>
  <option value="2">2</option>
  <option value="3">3</option>
  <option value="4">4</option>
  <option value="5">5</option>
  <option value="6">6</option>
  <option value="7">7</option>
</select>
<h4>Message</h4>
<textarea placeholder="Leave a message to the lister of the property, whether you have any concerns or need more information."></textarea>
<br><br>
<input type='submit' value='Request Booking'>
</form>
</div>
</body>